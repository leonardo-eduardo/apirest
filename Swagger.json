{
  "openapi": "3.0.1",
  "info": {
    "title": "API RE Cotacao",
    "description": "Essa é uma API desenvolvida para consumo de webservices da Bradesco Seguros.",
    "termsOfService": "https://wwws.bradescoseguros.com.br/wps/portal/SHSG/home/home",
    "contact": {
      "name": "Bradesco Seguros",
      "url": "https://wwws.bradescoseguros.com.br/wps/portal/SHSG/home/home",
      "email": "bradescoseguros@bradescoseguros.com.br"
    },
    "license": {
      "name": "Apache License Version 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "//localhost:8080/re-cotacao/v1"
    }
  ],
  "tags": [
    {
      "name": "Parceiros",
      "description": "Produto parceiros cotacao"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/produtos": {
      "post": {
        "tags": [
          "Parceiros"
        ],
        "summary": "Obtém a cotaçao de um parceiro",
        "description": "Obtém a cotaçao de um parceiro, realizada em um webservice da Bradesco Seguros",
        "operationId": "getParceiroUsingGET",
        "requestBody": {
          "description": "Usar dados do parceiro como parâmetro",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CotacaoRequestBody"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Parceiro"
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros de entrada inválidos",
            "content": {}
          },
          "401": {
            "description": "Parceiro não encontrado",
            "content": {}
          },
          "402": {
            "description": "Não foram encontrados Plano(s) para o Parceiro",
            "content": {}
          },
          "403": {
            "description": "Não foram encontradas Coberturas(s) para o Plano",
            "content": {}
          },
          "404": {
            "description": "Not Found",
            "content": {}
          },
          "500": {
            "description": "Erro inesperado!",
            "content": {}
          }
        },
        "deprecated": false
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "CotacaoRequestBody": {
        "title": "CotacaoEntity",
        "required": [
          "idCanal",
          "idOrigem",
          "idParceiro",
          "numeroBloco"
        ],
        "type": "object",
        "properties": {
          "idCanal": {
            "type": "string",
            "description": "Id do canal para a realização de uma cotacao.",
            "example": "123456"
          },
          "idOrigem": {
            "type": "string",
            "description": "Id do sistema legado onde será feita a consulta.",
            "example": "123456"
          },
          "idParceiro": {
            "type": "string",
            "description": "Id do parceiro para a realização de uma cotacao.",
            "example": "123456"
          },
          "numeroBloco": {
            "type": "string",
            "description": "Numero do bloco solicitado na consulta, para a realização de uma cotacao.",
            "example": "123456"
          }
        },
        "description": "Entidade que reúne os dados de entrada (request body) para realizar uma cotação."
      },
      "Parceiro": {
        "title": "Parceiro",
        "type": "object",
        "properties": {
          "idParceiro": {
            "type": "integer",
            "description": "Id do Parceiro.",
            "format": "int64",
            "example": 123456
          },
          "nomeParceiro": {
            "type": "string",
            "description": "Nome do Parceiro.",
            "example": "Fulano de Tal"
          },
          "nomeParceria": {
            "type": "string",
            "description": "Nome da Parceria.",
            "example": "Parceria ABC"
          },
          "produtos": {
            "type": "array",
            "description": "Lista de Produtos.",
            "items": {
              "$ref": "#/components/schemas/Produto"
            }
          }
        },
        "description": "Entidade que reúne os dados de retorno do sistema legado AFND, relativos a um parceiro, para montar o response de uma cotação."
      },
      "Plano": {
        "title": "Plano",
        "type": "object",
        "properties": {
          "idPlano": {
            "type": "integer",
            "description": "Id do Plano.",
            "format": "int64",
            "example": 123456
          },
          "planosCobertura": {
            "type": "array",
            "description": "Lista de Planos de Cobertura.",
            "items": {
              "$ref": "#/components/schemas/PlanoCobertura"
            }
          },
          "valorPremioTotal": {
            "type": "number",
            "description": "Valor do Prêmio Total.",
            "format": "double",
            "example": 1000.1
          }
        },
        "description": "Entidade que reúne os dados de retorno do sistema legado AFND, relativos a um plano, para montar o response de uma cotação."
      },
      "PlanoCobertura": {
        "title": "PlanoCobertura",
        "type": "object",
        "properties": {
          "codigoCobertura": {
            "type": "integer",
            "description": "Codigo da cobertura.",
            "format": "int64",
            "example": 123456
          },
          "codigoRamo": {
            "type": "integer",
            "description": "Código do ramo.",
            "format": "int64",
            "example": 123456
          },
          "codigoSubRamo": {
            "type": "integer",
            "description": "Código do sub-ramo.",
            "format": "int64",
            "example": 123456
          },
          "descricaoCobertura": {
            "type": "string",
            "description": "Descrição da cobertura.",
            "example": "Descrição cobertura ABC"
          },
          "detalhamentoCobertura": {
            "type": "string",
            "description": "Detalhamento da cobertura.",
            "example": "Detalhamento cobertura ABC"
          },
          "indicadorCoberturaBasica": {
            "type": "string",
            "description": "Indicador da cobertura Básica.",
            "example": "Indicador basico ABC"
          },
          "indicadorCoberturaOpcional": {
            "type": "string",
            "description": "Indicador da cobertura Opcional.",
            "example": "Indicador opcional ABC"
          },
          "percentualFranquia": {
            "type": "number",
            "description": "Percentual da franquia.",
            "format": "double",
            "example": 1.1
          },
          "valorFranquia": {
            "type": "number",
            "description": "Valor da franquia.",
            "format": "double",
            "example": 2000.2
          },
          "valorLMI": {
            "type": "number",
            "description": "Valor do LMI.",
            "format": "double",
            "example": 1000.1
          },
          "valorMaxFranquia": {
            "type": "number",
            "description": "Valor Máximo da franquia.",
            "format": "double",
            "example": 1000.1
          },
          "valorMinFranquia": {
            "type": "number",
            "description": "Valor Mínimo da franquia.",
            "format": "double",
            "example": 100.1
          }
        },
        "description": "Entidade que reúne os dados de retorno do sistema legado AFND, relativos a um plano de cobertura, para montar o response de uma cotação."
      },
      "Produto": {
        "title": "Produto",
        "type": "object",
        "properties": {
          "descricaoProduto": {
            "type": "string",
            "description": "Descrição de um produto",
            "example": "Produto A"
          },
          "idProduto": {
            "type": "integer",
            "description": "Id de um produto",
            "format": "int64",
            "example": 123456
          },
          "idSucursal": {
            "type": "integer",
            "description": "Id de uma sucursal",
            "format": "int64",
            "example": 123456
          },
          "planos": {
            "type": "array",
            "description": "Lista de Planos",
            "items": {
              "$ref": "#/components/schemas/Plano"
            }
          }
        },
        "description": "Entidade que reúne os dados de retorno do sistema legado AFND, relativos a um produto, para montar o response de uma cotação."
      }
    }
  }
}